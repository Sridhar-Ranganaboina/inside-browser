{
  "manifest_version": 3,
  "name": "Commet Assistant PoC - Extension",
  "version": "0.2.0",
  "description": "Run natural-language automation and page summaries in your current tab.",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Commet Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
