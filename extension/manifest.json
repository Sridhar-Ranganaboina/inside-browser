{
  "manifest_version": 3,
  "name": "Commet Assistant",
  "version": "1.1.1",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],   
  "background": { "service_worker": "background.js" },
  "action": {},
  "web_accessible_resources": [
    { "resources": ["panel.html", "panel.js"], "matches": ["<all_urls>"] }
  ]
}
