{
  "manifest_version": 3,
  "name": "Commet Assistant (Modular)",
  "version": "0.1.0",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "bg/index.js", "type": "module" },
  "action": { "default_title": "Commet Assistant" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/main.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "common/*.js",
      "content/*.js"
    ],
    "matches": ["<all_urls>"]
  }]
}
