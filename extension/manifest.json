{
  "manifest_version": 3,
  "name": "Commet Assistant PoC - Extension",
  "version": "0.1.1",
  "description": "Execute automation plans and summarize pages.",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_title": "Commet Assistant" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
